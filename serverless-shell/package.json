{
  "name": "serverless-shell",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/jest": "^29.0.0",
    "@types/aws-lambda": "^8.10.119",
    "aws-cdk": "2.104.0",
    "typescript": "~5.2.2",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "aws-sdk-client-mock": "^3.0.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.189.1",
    "constructs": "^10.0.0",
    "@aws-sdk/client-ecs": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}