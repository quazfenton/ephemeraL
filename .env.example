# Environment Configuration Example
# Copy this file to .env and fill in your values

# Identity Provider Configuration
# Get these from your IdP (Auth0, Clerk, Supabase, etc.)
JWT_PUBLIC_KEY_PATH=/path/to/public_key.pem
JWT_ALGORITHM=RS256

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Workspace Configuration
WORKSPACE_BASE_DIR=/srv/workspaces
SNAPSHOT_BASE_DIR=/srv/snapshots

# Snapshot Configuration
SNAPSHOT_RETENTION_COUNT=5
SNAPSHOT_ON_IDLE=true
SNAPSHOT_ON_SAVE=true
SNAPSHOT_DAILY=false

# Container Configuration
CONTAINER_IMAGE=ubuntu:22.04
CONTAINER_PREFIX=shell-

# Storage Configuration (Optional)
# For S3-compatible storage
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# Logging
LOG_LEVEL=INFO
